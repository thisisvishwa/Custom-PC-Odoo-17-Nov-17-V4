            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Customer
                </p>
            </field>
        </record>

        <!-- Customer Menu -->
        <menuitem id="menu_customer" name="Customers" parent="custom_pc_odoo_17_v4.menu_custom_pc" action="action_customer"/>
    </data>
</odoo>
