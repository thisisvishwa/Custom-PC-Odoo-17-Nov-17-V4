<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Customer Form View -->
        <record id="customer_form_view" model="ir.ui.view">
            <field name="name">customer.form.view</field>
            <field name="model">customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <notebook>
                            <page string="PC Builds">
                                <field name="pc_build_ids"/>
                            </page>
                            <page string="Order History">
                                <field name="order_history_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Customer Tree View -->
        <record id="customer_tree_view" model="ir.ui.view">
            <field name="name">customer.tree.view</field>
            <field name="model">customer</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Customer Action -->
        <record id="action_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
